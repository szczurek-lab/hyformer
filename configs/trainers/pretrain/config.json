{
  "batch_size": 512,
  "learning_rate": 6e-4,
  "weight_decay": 1e-1,
  "max_epochs": 40,
  "tasks":
      {
        "generation":  90,
        "reconstruction": 5,
        "prediction": 5
      },
  "compile": true,
  "enable_ddp": true,
  "dtype": "bfloat16",
  "num_workers": 16,
  "beta1": 0.9,
  "beta2": 0.95,
  "gradient_accumulation_steps": 1,
  "grad_clip": 1.0,
  "decay_lr": true,
  "warmup_iters": 2500,
  "min_lr": 1e-6,
  "log_interval": 1000
}