{
  "batch_size": 512,
  "learning_rate": 6e-4,
  "weight_decay": 1e-1,
  "max_epochs": 40,
  "tasks": 
    {
      "lm": 8,
      "mlm": 1,
      "prediction": 1
    },
  "compile": true,
  "enable_ddp": false, 
  "dtype": "bfloat16",
  "num_workers": 16,
  "beta1": 0.9,
  "beta2": 0.95,
  "gradient_accumulation_steps": 1,
  "grad_clip": 1.0,
  "decay_lr": true,
  "log_interval": 2000,
  "save_interval": 20,
  "min_lr": 6e-5,
  "warmup_iters": 5000
}